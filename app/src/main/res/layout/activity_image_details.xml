<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:orientation="vertical"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".ImageDetails">

    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" android:layout_margin="20dp">

        <ImageView
                android:layout_width="match_parent"
                android:layout_height="match_parent" app:srcCompat="@drawable/ic_launcher_background"
                android:id="@+id/imageView"/>
    </FrameLayout>
    <LinearLayout
            android:orientation="vertical"
            android:layout_width="match_parent"
            android:layout_height="match_parent" android:layout_margin="20dp"
            android:gravity="center|center_horizontal|center_vertical" android:background="@color/blue"
    >

        <TextView
                android:text="Image Title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/textView3"
                android:layout_gravity="center|center_horizontal|center_vertical"/>

        <TextView
                android:text="TextView"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content" android:id="@+id/imagetext"
                android:layout_gravity="center|center_horizontal|center_vertical"/>

    </LinearLayout>
</LinearLayout>